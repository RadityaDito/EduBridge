<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/classroomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Teacher Profile"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="30sp"
        android:background="#E0E0F0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

    <!--    <ImageView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="20sp"-->
    <!--        android:background="@drawable/student_with_book"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/view" />-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130sp"
        android:id="@+id/profileConstraint"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:paddingVertical="20sp"
        >

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/student_avatar"
            android:layout_marginStart="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="40sp"
            app:layout_constraintLeft_toRightOf="@id/profileImage"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/poppins_semibold"
            tools:text="Raditya Dito" />

        <TextView
            android:id="@+id/subjectTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="40sp"
            app:layout_constraintLeft_toRightOf="@id/profileImage"
            app:layout_constraintTop_toBottomOf="@id/name"
            tools:text="Math" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0F0"
        app:layout_constraintTop_toBottomOf="@id/profileConstraint"
        />

    <TextView
        android:id="@+id/generalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Info"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="15sp"
        android:textColor="#3358C6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0F0"
        app:layout_constraintTop_toBottomOf="@id/generalInfo"
        android:layout_marginTop="10sp"
        />

    <LinearLayout
        android:id="@+id/studentLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view3"
        android:orientation="horizontal"
        android:layout_marginLeft="8sp"
        android:padding="10sp"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Age : "
            android:layout_marginRight="20sp"
            />

        <View
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/teacherAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:textSize="15dp"
            android:text="20 Years Old"
            />

    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0F0"
        app:layout_constraintTop_toBottomOf="@id/studentLinearLayout1"
        android:layout_marginTop="5sp"
        />

    <LinearLayout
        android:id="@+id/studentLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view4"
        android:orientation="horizontal"
        android:layout_marginLeft="8sp"
        android:padding="10sp"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Nomor Induk : "
            android:layout_marginRight="20sp"
            />

        <View
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/teacherNomorInduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="15dp"
            android:text="2106733912"
            />

    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0F0"
        app:layout_constraintTop_toBottomOf="@id/studentLinearLayout2"
        android:layout_marginTop="5sp"
        />

    <LinearLayout
        android:id="@+id/studentLinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view5"
        android:orientation="horizontal"
        android:layout_marginLeft="8sp"
        android:padding="10sp"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="HR Teacher : "
            android:layout_marginRight="20sp"
            />

        <View
            android:layout_gravity="center"
            android:layout_weight="1.35"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/teacherClassroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="15dp"
            android:text="XII MIPA 1"
            />

    </LinearLayout>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0F0"
        app:layout_constraintTop_toBottomOf="@id/studentLinearLayout3"
        android:layout_marginTop="5sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/teacherDeleteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/poppins_semibold"
        android:text="Delete Teacher"
        android:layout_marginHorizontal="10sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


